{
  "manifest_version": 2,
  "name": "Tab Apps",
  "version": "0.2.0",
  "description": "This extension allows you to handle tab as a windowed app",
  "homepage_url": "https://github.com/nom3ad/tab-as-app-web-extension",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "58.0a1",
      "id": "tabapps@webext"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'",
  "background": {
      "scripts": ["common.js", "background.js"]
  },
  "options_ui":{
    "page": "options.html"
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "Tab Apps",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "<all_urls>",
    "activeTab",
    "tabs",
    "webNavigation",
    "scripting",
    "storage",
    "nativeMessaging"
  ]
}
